apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: secure-ingress
spec:
  tls:
  - hosts:
     - secure-ingress.vmw.${domain}
    secretName: cert01
  rules:
    - host: secure-ingress.vmw.${domain}
      http:
        paths:
          - pathType: Prefix
            path: "/v1"
            backend:
              service:
                name: web-front-1
                port:
                  number: 80